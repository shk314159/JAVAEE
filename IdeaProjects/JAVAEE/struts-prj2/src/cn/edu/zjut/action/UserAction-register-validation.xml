<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
    <field name="loginUser.account">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="login.account.null"></message>
        </field-validator>
    </field>
    <field name="loginUser.password">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key = "login.password.null"/>
        </field-validator>
    </field>
    <field name="loginUser.repassword">
        <field-validator type="fieldexpression">
            <param name="expression">loginUser.password==loginUser.repassword</param>
            <message>前后密码不一致</message>
        </field-validator>
    </field>
    <field name="loginUser.email">
        <field-validator type="email">
            <message>邮箱不符合规范</message>
        </field-validator>
    </field>
</validators>