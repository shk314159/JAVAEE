<!--            contextConfigLocation-->
<!--        </param-name>-->
<!--        <param-value>-->
<!--            classpath:applicationContext.xml-->
<!--        </param-value>-->
<!--    </context-param>-->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
</web-app>